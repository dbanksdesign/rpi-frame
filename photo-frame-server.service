[Unit]
Description=Digital Photo Frame Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/rpi-frame
ExecStart=/usr/bin/node /home/pi/rpi-frame/dist/server/index.js
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target

